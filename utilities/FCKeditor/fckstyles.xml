<Styles>
	<Style name="Image on Left" element="img">
		<Attribute name="style" value="padding: 5px; margin-right: 5px" />
		<Attribute name="border" value="2" />
		<Attribute name="align" value="left" />
	</Style>
	
	<Style name="Image on Right" element="img">
		<Attribute name="style" value="padding: 5px; margin-left: 5px" />
		<Attribute name="border" value="2" />
		<Attribute name="align" value="right" />
	</Style>
	
	<Style name="Custom Bold" element="b" />
	
	<Style name="Custom Italic" element="em" />
	
	<Style name="Topics" element="p">
		<Attribute name="class" value="topics" />
	</Style>
	
	<Style name="General Content" element="span">
		<Attribute name="class" value="Content" />
	</Style>
	
	<Style name="Title" element="p">
		<Attribute name="class" value="title" />
	</Style>
	
	<Style name="Copyright" element="p">
		<Attribute name="class" value="copyright" />
	</Style>
	
	<Style name="Custom Paragraph" element="p">
		<Attribute name="color:" value="#000000" />
		<Attribute name="font-family" value="Arial" />
	</Style>

	<Style name="Page Title" element="p">
		<Attribute name="class" value="welcome" />
	</Style>

</Styles>